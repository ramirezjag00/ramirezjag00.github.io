<% include ../partials/header %>

<nav class="navbar">
	<div class="navbar-header" >
		<a class="navbar-brand" href="/"><img id="scicLogo" src="../img/scic_logo.png"/>
		</a>
	</div>
	<div class="button_container" id="toggle"><span class="top"></span><span class="middle"></span><span class="bottom"></span></div>
</nav>

<div class="container-projects">
	<h1 class="header-text-form"><%= career.jobtitle%></h1>

	<div class="container-career">
		<div class="label label-content">Department:</div>
		<div class="label-content"><%= career.department%></div>
		<div class="label label-content">Location:</div>
		<div class="label-content"><%= career.location%></div>
		<div class="label">Qualifications:</div>
			<p><%=career.qualification%></p>
		<div class="label">Job Description:</div>
			<p><%=career.jobdescription%></p>
		<% if(currentUser) { %>
		<form class="delete-form" action="/careers/<%=career._id%>?_method=DELETE" method="POST">
			<div><button class="btn btn-xs btn-danger delete-button">Delete</button>
			</form></div>
			<% } %>
			<div class="projects-link"><a href="/careers">View Careers</a></div>
			<div class="projects-link"><a href="#">Apply Now</a></div>
		</div>
	</div>


	<% include ../partials/footer %>